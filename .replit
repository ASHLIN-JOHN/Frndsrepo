modules = ["nodejs-20", "postgresql-16"]
[nix]
channel = "stable-25_05"
packages = ["unzip"]

[agent]
expertMode = true

[userenv]

[userenv.shared]
DB_URL = "postgresql://postgres:password@helium/heliumdb?sslmode=disable"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "doctor-app-server"

[[workflows.workflow]]
name = "doctor-app-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd deeps && npm start"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3000
externalPort = 3000
